IMPORT PANDAS AS PD

IMPORT NUMPY AS NP

# 1. LOAD THE DATASET

# REPLACE 'YOUR_DATASET.CSV' WITH YOUR DATASET PATH

DATA = PD.READ_CSV('YOUR_DATASET.CSV')

# DISPLAY THE FIRST FEW ROWS OF THE DATASET

PRINT("ORIGINAL DATASET:")

PRINT(DATA.HEAD())

# 2. HANDLING MISSING VALUES

# OPTION 1: FILL MISSING NUMERIC VALUES WITH THE MEAN OF THE 

COLUMN

DATA.FILLNA(DATA.MEAN(), INPLACE=TRUE)

# OPTION 2: FOR CATEGORICAL COLUMNS, YOU CAN FILL MISSING VALUES 

WITH MODE

# DATA['CATEGORICAL_COLUMN'] = 

DATA['CATEGORICAL_COLUMN'].FILLNA(DATA['CATEGORICAL_COLUMN'].

MODE()[0])

# 3. REMOVE DUPLICATES

DATA.DROP_DUPLICATES(INPLACE=TRUE)

# 4. HANDLING OUTLIERS USING THE IQR METHOD

# CALCULATE Q1 (25TH PERCENTILE) AND Q3 (75TH PERCENTILE) FOR 

NUMERIC COLUMNS

Q1 = DATA.QUANTILE(0.25)

Q3 = DATA.QUANTILE(0.75)

IQR = Q3 - Q1

# DEFINE A RANGE FOR OUTLIERS AND REMOVE ROWS THAT FALL OUTSIDE 

THIS RANGE

DATA_CLEANED = DATA[~((DATA < (Q1 - 1.5 * IQR)) | (DATA > (Q3 + 1.5 * 

IQR))).ANY(AXIS=1)]

# 5. SAVE THE CLEANED DATASET TO A NEW CSV FILE

DATA_CLEANED.TO_CSV('CLEANED_DATASET.CSV', INDEX=FALSE)

PRINT("DATA CLEANING IS COMPLETE. CLEANED DATASET SAVED AS 

'CLEANED_DATASET.CSV'")
